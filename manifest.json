      "purpose": "any"
    },
    {
      "src": "assets/imgs/icons/favicon-maskable-inverted.svg",
      "sizes": "513x513 512x512 384x384 196x196 192x192 180x180 152x152 144x144 128x128 96x96 72x72 64x64 48x48 32x32 26x26 24x24 16x16",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },

    {
      "src": "assets/imgs/icons/favicon-mono.svg",
      "sizes": "513x513 512x512 384x384 196x196 192x192 180x180 152x152 144x144 128x128 96x96 72x72 64x64 48x48 32x32 26x26 24x24 16x16",
      "type": "image/svg+xml",
