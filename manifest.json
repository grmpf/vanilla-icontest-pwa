  "screenshots": [
    {
      "src": "assets/imgs/screenshots/screenshot-1.jpg",
      "type": "image/jpeg",
      "sizes": "1920x1080"
    },
    {
      "src": "assets/imgs/screenshots/screenshot-2.jpg",
      "type": "image/jpeg",
      "sizes": "1920x1080"
    },
    {
      "src": "assets/imgs/screenshots/screenshot-3.jpg",
      "type": "image/jpeg",
      "sizes": "1920x1080"
    },
    {
      "src": "assets/imgs/screenshots/screenshot-4.jpg",
      "type": "image/jpeg",
      "sizes": "1920x1080"
    }
  ],
  "shortcuts": [
    {
      "name": "Homepage",
      "short_name": "Home",
      "description": "Home Desc",
      "url": "/?source=pwa",
      "icons": [
        {
          "src": "favicon.svg",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Homepage 2",
      "short_name": "Home2",
      "description": "Home Desc 2",
      "url": "/?source=pwa&foo=bar",
      "icons": [
        {
          "src": "assets/imgs/icons/favicon-maskable.svg",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Test",
      "short_name": "Test",
      "description": "Test Desc",
      "url": "/test.html?source=pwa",
      "icons": [
        {
          "src": "assets/imgs/dP-lines.svg",
          "type": "image/svg+xml",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Debug",
      "short_name": "Debug",
      "description": "Debug Desc",
      "url": "/debug.html?source=pwa&debug=1",
      "icons": [
        {
          "src": "assets/imgs/icons/favicon-maskable-inverted.svg",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Debug2",
      "short_name": "Debug",
      "description": "Debug Desc",
      "url": "/debug.html?source=pwa&debug=2",
      "icons": [
        {
          "src": "assets/imgs/icons/favicon-mono.svg",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-receive",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "img",
          "accept": ["image/png", "image/jpeg", "image/svg+xml"]
        }
      ]
    }
  }
}
