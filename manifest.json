{
  "name": "IconTest PWA",
  "short_name": "IconTest PWA",
  "description": "Simple PWA for testing and as reference",
  "scope": "/",
  "start_url": "/?source=pwa",
  "display_override": ["window-controls-overlay"],
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#ffffff",
  "background_color": "#1d508f",
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 48x48 32x32 24x24 16x16",
      "type": "image/x-icon",
      "purpose": "any"
    },

    {
      "src": "assets/imgs/icons/android-chrome-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/imgs/icons/android-chrome-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/imgs/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/imgs/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },

    {
      "src": "assets/imgs/icons/android-chrome-maskable-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/imgs/icons/android-chrome-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },

    {
      "src": "favicon.svg",
      "sizes": "513x513 512x512 384x384 196x196 192x192 180x180 152x152 144x144 128x128 96x96 72x72 64x64 48x48 32x32 26x26 24x24 16x16",
